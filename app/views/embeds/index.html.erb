<% flash.each do | message_type, message| %>
  <div class="alert alert--<%= message_type %> fadeOut"><%= message %></div>
<% end %>

<% if @embeds.any? %>
  <div>
    <h1 class="m-0 pb-2">My Saved Embeds</h1>
    <div class="pl-2@sm mt-1">
      <% @embeds.each do |e| %>
        <div class="embed-link">
          <%= link_to e, class: "app" do %>
            <span class="icon">
              <%= embedded_svg(e.app) %>
            </span>
            <%= e.name %>
          <% end %>

          <%= link_to(
            embed_path(e),
            method: :delete,
            data: { confirm: 'Are you sure you want to delete this?' },
            class: "delete"
          ) do %>
            <%= embedded_svg('close') %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
