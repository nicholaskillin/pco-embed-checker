<%= render 'widget_sidebar_content' %>

<div class="row">
  <%= render 'shared/side_nav' %>
  <div class="col-sm-8">
    <div class="row">
      <h1><%= @widget.name %></h1> 
      <div class="col">
        <%= link_to "<i class=\"material-icons delete-icon\">delete</i>".html_safe, 
          widget_path(@widget), 
          method: :delete, 
          data: { confirm: 'Are you sure you want to delete this?' },
          class: "delete-link" %> 
      </div>
    </div>
    <div class="row">
      <%= @widget.code.html_safe %>
    </div>
  </div>
</div>