<!DOCTYPE html>
<html lang="en">
  <head>
    <%= csrf_meta_tags %>
    <%= render 'layouts/head' %>
    <%= render 'layouts/header'%>
  </head>

  <body>
    <div class="container-fluid">
      <% flash.each do | message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
